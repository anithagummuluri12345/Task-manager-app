<!DOCTYPE html>
<html lang="en">
<head>
    {{> _header }}
    <title>{{ title }}</title>
</head>
  <body>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-4 col-10 form-m">
            <a href="/"><h4 class="text-center text-primary mb-5">Simple Task Manager</h4></a>
            {{> _messages}}
            <form class="text-center">
              <div class="md-form">
                <input type="email" id="email" name="email" class="form-control">
                <label for="email">E-mail</label>
              </div>
              <div class="md-form">
                <input type="password" name="password" id="password" class="form-control">
                <label for="password">Password</label>
              </div>
              <div class="md-form">
                  <button id="signInBtn" type="submit" class="btn btn-primary btn-block waves-effect z-depth-0">Log in</button>
                  {{> _loading}}
                <p>Create an account <a href="/register"><strong>Register</strong></a></p>
              </div>
            </form>
          </div>
        </div>
      </div>
    {{> _footer}}
  </body>
</html>